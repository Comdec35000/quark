{
    "compilerOptions": {
        "rootDirs": [
            "src/",
            "tests/"
        ],
        "outDir": "./dist",
        "watch": true,
        "target": "es5",
        "module": "CommonJS",
        "types": ["node", "mocha", "chai"],
        "moduleResolution": "classic",
        "downlevelIteration": true,
        "allowJs": true,

        "baseUrl": ".",
        "paths": {
            "vm/*": ["./src/vm/*"],
            "core/*": ["./src/core/*"],
            "interfaces/*": ["./src/interfaces/*"],
            "tokens": ["./src/core/tokens/tokens.ts"],
            "other/*": ["./src/other/*"],
            "utils": ["./src/utils/*"],
            "tests/*": ["./tests/*"]
        }
        
    },
    "exclude": ["node_modules"],
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "files": ["src/index.ts"]
}
