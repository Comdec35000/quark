{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "watch": true,
        "module": "commonjs",
        "types": ["node"],
        "downlevelIteration": true,

        "baseUrl": "./src",
        "paths": {
            "@vm/*": ["vm/*"],
            "@core/*": ["core/*"],
            "@tokens": ["core/tokens/tokens.ts"],
            "@other/*": ["other/*"],
            "@utils": ["utils/*"],
            "@/*": ["*"]
        }
        
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"],
    "files": ["src/index.ts"]
}
