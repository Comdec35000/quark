{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "./dist",
        "watch": true,
        "module": "commonjs",
        "types": ["node", "mocha", "chai"],
        "downlevelIteration": true,

        "baseUrl": ".",
        "paths": {
            "@vm/*": ["./src/vm/*"],
            "@core/*": ["./src/core/*"],
            "@tokens": ["./src/core/tokens/tokens.ts"],
            "@other/*": ["./src/other/*"],
            "@utils": ["./src/utils/*"],
            "@tests/*": ["./src/tests/*"],
            "@/*": ["*"]
        }
        
    },
    "exclude": ["node_modules"],
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "files": ["src/index.ts"]
}
