; CORE DECLARATIONS
(declare (begin a) (-> [a] a))
(declare (extern a) (-> str a))

(declare Call (-> any any any))
(declare Property (-> any any any))
(declare Var (-> str any))
(declare Throw (-> any any))
(declare Block (-> any any))

(let putStr (fn [x]
  (Call (Property (Var "process") (Property (Var "stdout") (Var "write"))) x)))


(declare to_string (-> any str))
(let to_string (fn [x]
  (Call (Property x (Var "toString")))))

(declare (print a) (-> a int))
(let print (fn [x] (let _ (putStr (to_string x))
                     (putStr "\n"))))

(let error (fn [msg] (Block (Throw msg))))

; ARITHMETIC OPERATORS
(declare (+ a) (-> a a a))
(declare (- a) (-> a a a))
(declare (* a) (-> a a a))
(declare (/ a) (-> a a a))

(declare (= a) (-> a a bool))